#include <stdio.h>

int main(void)
{
    int num, i;
    unsigned long long fact = 1;

    do {
        printf("Ingrese un numero entero positivo: ");
        scanf("%d", &num);
    } while (num < 0);

    for (i = 1; i <= num; i++)
        fact *= i;

    printf("El factorial de %d es: %llu\n", num, fact);

    return 0;
}

#include <stdio.h>
#include <math.h>

int main(void)
{
    int num, i, primo = 1;

    do {
        printf("Ingrese un numero mayor o igual a 2: ");
        scanf("%d", &num);
    } while (num < 2);

    for (i = 2; i <= sqrt(num); i++)
    {
        if (num % i == 0)
        {
            primo = 0;
            break;
        }
    }

    if (primo)
        printf("El numero %d es primo\n", num);
    else
        printf("El numero %d no es primo\n", num);

    return 0;
}


#include <stdio.h>

int main(void)
{
    int n, i;
    float suma = 0;

    do {
        printf("Ingrese un numero entero positivo: ");
        scanf("%d", &n);
    } while (n <= 0);

    for (i = 1; i <= n; i++)
        suma += 1.0 / i;

    printf("La suma de la serie es: %.4f\n", suma);

    return 0;
}
